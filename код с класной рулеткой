    <script>
        const items = [
            { name: 'M416 Glacier', img: 'pngimg.com' },
            { name: '600 UC', img: 'i.ibb.co' },
            { name: 'X-Suit Pharaoh', img: 'i.ibb.co' },
            { name: 'Blood Raven', img: 'i.ibb.co' },
            { name: 'Kar98k Skin', img: 'i.ibb.co' }
        ];

        const track = document.getElementById('track');
        let currentPrize = null;

        // –°–æ–∑–¥–∞–µ–º –ª–µ–Ω—Ç—É –ø—Ä–µ–¥–º–µ—Ç–æ–≤
        function init() {
            track.innerHTML = '';
            // –°–æ–∑–¥–∞–µ–º 60 —ç–ª–µ–º–µ–Ω—Ç–æ–≤ –¥–ª—è –¥–ª–∏–Ω–Ω–æ–π –ø—Ä–æ–∫—Ä—É—Ç–∫–∏
            for(let i = 0; i < 60; i++) {
                const item = items[Math.floor(Math.random() * items.length)];
                const card = document.createElement('div');
                card.className = 'item-card';
                card.innerHTML = `<img src="${item.img}"><span style="font-size:8px; margin-top:5px; color:#8da1b5">${item.name}</span>`;
                track.appendChild(card);
            }
        }

        function startSpin() {
            const btn = document.getElementById('spinBtn');
            btn.disabled = true;
            
            const cardWidth = 120; // 110px + 10px gap
            const rounds = 40; // –∫–æ–ª–∏—á–µ—Å—Ç–≤–æ –∫–∞—Ä—Ç–æ—á–µ–∫ –ø—Ä–æ–ª–µ—Ç–∞—é—â–∏—Ö –º–∏–º–æ
            const randomOffset = Math.floor(Math.random() * 80) + 20; 
            const targetX = (rounds * cardWidth) - (300 - cardWidth/2) + randomOffset;

            track.style.transition = 'transform 6s cubic-bezier(0.15, 0, 0.05, 1)';
            track.style.transform = `translateX(-${targetX}px)`;

            // –û–ø—Ä–µ–¥–µ–ª—è–µ–º –≤—ã–∏–≥—Ä–∞–Ω–Ω—ã–π –ø—Ä–µ–¥–º–µ—Ç (—Ç–æ—Ç —á—Ç–æ –æ–∫–∞–∂–µ—Ç—Å—è –ø–æ–¥ —Å—Ç—Ä–µ–ª–∫–æ–π)
            const winIndex = Math.floor((targetX + 300) / cardWidth);
            // –î–ª—è —É–ø—Ä–æ—â–µ–Ω–∏—è –≤–æ–∑—å–º–µ–º —Å–ª—É—á–∞–π–Ω—ã–π –∏–∑ —Å–ø–∏—Å–∫–∞ –¥–ª—è –ø–æ–∫–∞–∑–∞ –≤ –æ–∫–Ω–µ
            currentPrize = items[Math.floor(Math.random() * items.length)];

            setTimeout(() => {
                showPrize(currentPrize);
                document.getElementById('badge').style.display = 'flex';
                btn.disabled = false;
                // –°–±—Ä–æ—Å –ø–æ–∑–∏—Ü–∏–∏ –±–µ–∑ –∞–Ω–∏–º–∞—Ü–∏–∏ –¥–ª—è —Å–ª–µ–¥—É—é—â–µ–≥–æ —Ä–∞–∑–∞
                setTimeout(() => {
                    track.style.transition = 'none';
                    track.style.transform = 'translateX(0)';
                    init();
                }, 500);
            }, 6500);
        }

        function showPrize(item) {
            document.getElementById('winImg').src = item.img;
            document.getElementById('winName').innerText = item.name;
            document.getElementById('prizeModal').classList.add('active');
        }

        function closePrize() {
            document.getElementById('prizeModal').classList.remove('active');
        }

        function openPrize() {
            if(currentPrize) {
                document.getElementById('prizeModal').classList.add('active');
            } else {
                alert("–ü–æ—á—Ç–∞ –ø—É—Å—Ç–∞. –°–Ω–∞—á–∞–ª–∞ –ø—Ä–æ–∫—Ä—É—Ç–∏—Ç–µ —Ä—É–ª–µ—Ç–∫—É!");
            }
        }

        init();
    </script>
