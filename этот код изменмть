        function updateWinnersStats() {
            const dailyWinners = Math.floor(Math.random() * 29) + 50; // От 50 до 78
            const totalWinners = 15842 + dailyWinners;
            
            document.getElementById('dailyWinners').textContent = dailyWinners;
            document.getElementById('totalWinners').textContent = totalWinners.toLocaleString();
            document.getElementById('winnersCount').textContent = dailyWinners;
        }
        
        // Инициализация при загрузке
        document.addEventListener('DOMContentLoaded', function() {
            updateWinnersStats();
            
            // Обновляем статистику каждые 30 секунд
            setInterval(updateWinnersStats, 30000);
            
            // Мобильное меню
            const mobileMenuToggle = document.getElementById('mobileMenuToggle');
            const sidebar = document.getElementById('sidebar');
            
            mobileMenuToggle.addEventListener('click', function() {
                sidebar.classList.toggle('active');
            });
            
            // Закрытие меню при клике вне его
            document.addEventListener('click', function(event) {
                if (!sidebar.contains(event.target) && !mobileMenuToggle.contains(event.target) && window.innerWidth <= 768) {
                    sidebar.classList.remove('active');
                }
            });
            
