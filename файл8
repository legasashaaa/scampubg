            function getRandomPrize() {
                return Math.floor(Math.random() * prizes.length);
            }
            
            // –§—É–Ω–∫—Ü–∏—è –ø–µ—Ä–µ–º–µ—â–µ–Ω–∏—è —Ä–∞–º–∫–∏
            function moveFrameToPrize(index) {
                const prizeItem = prizeItems[index];
                const rect = prizeItem.getBoundingClientRect();
                const containerRect = document.querySelector('.roulette-container').getBoundingClientRect();
                
                selectionFrame.style.width = (rect.width + 20) + 'px';
                selectionFrame.style.height = (rect.height + 20) + 'px';
                selectionFrame.style.left = (rect.left - containerRect.left - 8) + 'px';
                selectionFrame.style.top = (rect.top - containerRect.top - 8) + 'px';
                selectionFrame.classList.add('active');
            }
            
            // –§—É–Ω–∫—Ü–∏—è –∑–∞–ø—É—Å–∫–∞ —Ä—É–ª–µ—Ç–∫–∏
            function startRoulette() {
                if (isSpinning) return;
                
                if (hasPlayed) {
                    showNotification("–í—ã —É–∂–µ –∏—Å–ø–æ–ª—å–∑–æ–≤–∞–ª–∏ —Å–≤–æ—é –ø–æ–ø—ã—Ç–∫—É —Å–µ–≥–æ–¥–Ω—è!", true);
                    return;
                }
                
                isSpinning = true;
                playBtn.disabled = true;
                socialSelectSection.classList.remove('active');
                confirmationSection.classList.remove('active');
                
                finalPrizeIndex = getRandomPrize();
                
                spinSound.currentTime = 0;
                spinSound.play();
                
                selectionFrame.style.opacity = '1';
                
                spinCount = 0;
                spinSpeed = 100;
                currentPrizeIndex = 0;
                
                spinInterval = setInterval(spinStep, spinSpeed);
            }
            
            function spinStep() {
                const prizeIndex = prizeOrder[currentPrizeIndex];
                moveFrameToPrize(prizeIndex);
                
                currentPrizeIndex = (currentPrizeIndex + 1) % prizeOrder.length;
                spinCount++;
                
                if (spinCount > totalSpins * 0.7) {
                    spinSpeed += 20;
                    clearInterval(spinInterval);
                    spinInterval = setInterval(spinStep, spinSpeed);
                }
                
                if (spinCount >= totalSpins) {
                    clearInterval(spinInterval);
                    
                    spinSound.pause();
                    
                    winSound.currentTime = 0;
                    winSound.play();
                    
                    setTimeout(() => {
                        moveFrameToPrize(finalPrizeIndex);
                        
                        setTimeout(() => {
                            isSpinning = false;
                            
                            hasPlayed = true;
                            playBtn.innerHTML = '<i class="fas fa-check"></i> –£–ñ–ï –ò–ì–†–ê–õ–ò';
                            
